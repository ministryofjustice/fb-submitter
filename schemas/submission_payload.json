{
  "$id": "http://gov.uk/schema/v1.0.0/submission_payload",
  "properties": {
    "service": {
      "description": "The service details",
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": [
        "id",
        "slug",
        "name"
      ]
    },
    "meta": {
      "description": "Meta properties for the submission",
      "type": "object",
      "properties": {
        "pdf_heading": {
          "type": "string"
        },
        "pdf_subheading": {
          "type": "string"
        },
        "submission_at": {
          "type": "string"
        }
      }
    },
    "actions": {
      "type": "array",
      "description": "The actions to be done on the submission",
      "items": { "$ref": "#/definitions/action" }
    },
    "pages": {
      "type": "array",
      "description": "All the pages and answers of the form",
      "items": { "$ref": "#/definitions/page" }
    },
    "attachments": {
      "type": "array",
      "description": "All attachments in the submission",
      "items": { "$ref": "#/definitions/attachment" }
    }
  },
  "required": [
    "service",
    "meta",
    "actions",
    "pages"
  ],
  "additionalProperties": false,
  "definitions": {
    "action": {
      "type": "object",
      "description": "The individual action for a submission",
      "properties": {
        "kind": {
          "type": "string",
          "enum": [
            "csv",
            "email",
            "json"
          ]
        },
        "to": {
          "type": "string"
        },
        "from": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "email_body": {
          "type": "string"
        },
        "user_answers": {
          "type": "string"
        },
        "include_pdf": {
          "type": "boolean",
          "default": true
        },
        "include_attachments": {
          "type": "boolean",
          "default": true
        },
        "url": {
          "type": "string"
        },
        "key": {
          "type": "string"
        }
      },
      "anyOf":[
        {
          "required":[
            "url",
            "key"
          ]
        },
        {
          "required": [
            "to",
            "from",
            "include_pdf"
          ]
        }
      ],
      "required": [
        "kind"
      ],
      "additionalProperties": false
    },
    "page": {
      "type": "object",
      "description": "The question pages of the form",
      "properties": {
        "heading": {
          "type": "string"
        },
        "answers": {
          "type": "array",
          "description": "All the user answers",
          "items": { "$ref": "#/definitions/user_answer" }
        }
      },
      "required": [
        "heading",
        "answers"
      ],
      "additionalProperties": false
    },
    "attachment": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string",
          "description": "The url of the attachment to be downloaded."
        },
        "filename": {
          "type": "string",
          "description": "The name of the attachment with the extension."
        },
        "mimetype": {
          "type": "string",
          "description": "The mimetype of the attachment. e.g text/plain."
        }
      }
    },
    "user_answer": {
      "type": "object",
      "properties": {
        "field_id": {
          "type": "string",
          "description": "The answer field ID"
        },
        "field_name": {
          "type": "string",
          "description": "The humanised label name for the user answer"
        },
        "answer": {
          "description": "The user answer",
          "oneOf": [
            { "type": "string" },
            { "type": "object" },
            {
              "type": "array",
              "items": { "type": "string" }
            }
          ]
        }
      },
      "required": [
        "field_id",
        "field_name",
        "answer"
      ],
      "additionalProperties": false
    }
  }
}
